<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trip_plan_budget">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.plan.PlanDetailsActivity"
            android:label="Plan Details"
            android:parentActivityName=".activity.plan.PlanSummaryActivity" />
        <activity android:name=".activity.restaurant.RestaurantPlannerActivity" />
        <activity android:name=".activity.hotel.HotelPlannerActivity" />

        <activity
            android:name=".activity.places.NearbyPlacesListActivity"
            android:label="Nearby Places"
            android:parentActivityName=".activity.places.NearbyPlacesActivity" />
        <activity
            android:name=".activity.places.NearbyPlacesActivity"
            android:label="Place Type"
            android:parentActivityName=".activity.plan.PlanSummaryActivity" />
        <activity
            android:name=".activity.plan.PlanSummaryActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.flight.FlightDateActivity"
            android:label="@string/select_dates_label" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.flight.PriceListActivity" />
        <activity android:name=".activity.car.CarDetailsActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activity.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".activity.car.FilterActivity" />
        <activity android:name=".activity.WithBudget" />
        <activity android:name=".activity.places.ExplorerActivity" />
        <activity
            android:name=".activity.car.CarBudgetPlannerActivity"
            android:label="Car Budget Planner"
            android:parentActivityName=".activity.HomeActivity" />
        <activity android:name=".activity.GoogleMapsActivity" />
        <activity
            android:name=".activity.flight.FlightPlannerActivity"
            android:label="Flight Planer"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.auth.SignUpActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".activity.auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>