<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.FilterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        card_view:cardBackgroundColor="@color/buttonColor"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:text="Destination"
            android:textColor="@color/background"
            android:textSize="14sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/corner"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Toronto, Ontario"
            android:inputType="text"
            android:textColor="@color/textColor"
            android:textColorHighlight="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        card_view:cardBackgroundColor="@color/buttonColor"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:text="Passanger"
                android:textColor="@color/background"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/minus"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/background"
                    android:onClick="onClickIncDec"
                    android:src="@drawable/minus_icon" />

                <TextView
                    android:id="@+id/passanger"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/background"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/add"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/background"
                    android:onClick="onClickIncDec"
                    android:src="@drawable/plus_icon" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="29dp"
        card_view:cardBackgroundColor="@color/buttonColor"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:text="Select Dates"
            android:textColor="@color/background"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnDate"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="60dp"

                android:layout_marginTop="28dp"
                android:background="@drawable/corner"

                android:drawablePadding="10dp"
                android:hint="From"
                android:inputType="text"
                android:padding="10dp"
                android:text="From"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textColorHighlight="@color/textColor"
                android:textColorHint="@color/textColor"

                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDateTo"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/corner"
                android:drawablePadding="10dp"
                android:hint="To"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textColorHighlight="@color/textColor"
                android:textColorHint="@color/textColor"

                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button"
        android:onClick="CalculateBudget"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="Next"
        android:textColor="#ffffff" />


    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDate"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="italic|bold" />
</LinearLayout>